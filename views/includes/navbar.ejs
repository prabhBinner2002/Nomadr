<style>
    .search-container {
        position: relative;
    }
    
    .search-input {
        height: 50px;
        border-radius: 30px;
        padding-left: 40px;
        padding-right: 50px;
        border: none;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }
    
    .search-icon {
        position: absolute;
        top: 50%;
        left: 15px;
        transform: translateY(-50%);
        color: #888;
    }
    
    .search-btn {
        position: absolute;
        top: 50%;
        right: 5px;
        transform: translateY(-50%);
        height: 40px;
        width: 40px;
        border-radius: 50%;
        border: none;
        background-color: #fe424d;
        color: white;
        display: flex;
        align-items: center;
        justify-content: center;
        box-shadow: 0 2px 6px rgba(254, 66, 77, 0.4);
        cursor: pointer;
        transition: background-color 0.3s ease;
    }
    
    .search-btn:hover {
        background-color: #e6363f;
    }
</style>

<nav class="navbar navbar-expand-lg bg-body-light border-bottom fixed-top">
    <div class="container-fluid">
        <a class="navbar-brand" href="/listings"><i class="fa-regular fa-compass"></i></a>
        
        <a class="navbar-brand me-auto" href="/listings">Explore</a>
        
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup">
            <span class="navbar-toggler-icon"></span>
        </button>
        
        <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
            
            <hr>
            
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-md-6">
                        <form action="/listings" method="GET" class="search-container">
                            <input type="text" id="searchInput" class="form-control search-input" placeholder="Search...">
                            <i class="fas fa-search search-icon"></i>
                            <button type="submit" class="search-btn">
                                <i class="fas fa-arrow-right"></i>
                            </button>
                        </form>
                        <div id="searchSuggestions" class="list-group position-absolute w-100 z-3" style="top: 100%;"></div>
                    </div>
                </div>
            </div>
            
            <div class="navbar-nav ms-auto">
                <a class="nav-link" href="/listings/new">Host Your Space</a>
                <% if(!currentUser) { %>
                <!-- user = undefined -->
                <a class="nav-link" href="/signup"><b>Sign Up</b></a>
                <a class="nav-link" href="/login"><b>Log in</b></a>
                <% } %> <% if(currentUser) { %>
                <a class="nav-link" href="/logout"><b>Log out</b></a>
                <% } %>
            </div>
        </div>
    </div>
</nav>
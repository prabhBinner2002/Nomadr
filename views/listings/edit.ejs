<% layout("/layouts/boilerplate") -%>

<div class="row mt-4 mb-4">
    <div class="col-8 offset-2">
        <h3>Edit This Listing</h3>
        <form action="/listings/<%= listing._id %>?_method=PUT" method="POST" class="modern-form needs-validation" novalidate enctype="multipart/form-data">
            
            <!-- Title -->
            <div class="form-floating mb-3">
                <input type="text" id="title" class="form-control" name="listing[title]" value="<%= listing.title %>" placeholder="Add a title" required>
                <label for="title" class="form-label">Title</label>
                <div class="invalid-feedback">
                    Please provide a listing title.
                </div>
            </div>
            
            <!-- Description -->
            <div class="form-floating mb-3">
                <textarea name="listing[description]" class="form-control" id="description" placeholder="Enter description..." style="height:5rem;" required><%= listing.description %></textarea>
                <label for="description" class="form-label">Description</label>
                <div class="invalid-feedback">
                    A description is required for the listing.
                </div>
            </div>
            
            <!-- Image Preview -->
            <div class="mb-3">
                <label class="form-label">Current Images</label>
                <div class="row">
                    <% if (listing.images && listing.images.length > 0) { %>
                    <% listing.images.forEach(img => { %>
                    <div class="col-md-4 mb-2">
                        <img src="<%= img.url.replace('/upload', '/upload/h_300,w_400,c_fill') %>" alt="Listing Image" class="img-thumbnail" style="height: 200px; object-fit: cover;">
                    </div>
                    <% }) %>
                    <% } else { %>
                    <p class="text-muted">No images uploaded yet.</p>
                    <% } %>
                </div>
            </div>
            
            <!-- Upload New Images -->
            <div class="mb-3">
                <label for="image" class="form-label">Upload More Images</label>
                <input type="file" class="form-control custom-file-input" id="image" name="listing[images]" multiple accept="image/*">
            </div>
            
            <!-- Price and Category -->
            <div class="row g-3">
                <div class="col-md-6 mb-3">
                    <div class="form-floating">
                        <input type="number" class="form-control" id="price" name="listing[price]" placeholder="Price" value="<%= listing.price %>" required>
                        <label for="price">Price ($)</label>
                        <div class="invalid-feedback">Please enter a price.</div>
                    </div>
                </div>
                <div class="col-md-6 mb-3">
                    <div class="form-floating">
                        <select class="form-select" name="listing[category]" id="category" required>
                            <option disabled <%= !listing.category ? "selected" : "" %> value="">Choose a category</option>
                            <option value="Beachfront" <%= listing.category === "Beachfront" ? "selected" : "" %>>Beachfront</option>
                            <option value="Cabins" <%= listing.category === "Cabins" ? "selected" : "" %>>Cabins</option>
                            <option value="Tiny homes" <%= listing.category === "Tiny homes" ? "selected" : "" %>>Tiny homes</option>
                            <option value="Amazing views" <%= listing.category === "Amazing views" ? "selected" : "" %>>Amazing views</option>
                            <option value="OMG!" <%= listing.category === "OMG!" ? "selected" : "" %>>OMG!</option>
                            <option value="Treehouses" <%= listing.category === "Treehouses" ? "selected" : "" %>>Treehouses</option>
                            <option value="Design" <%= listing.category === "Design" ? "selected" : "" %>>Design</option>
                            <option value="Lakefront" <%= listing.category === "Lakefront" ? "selected" : "" %>>Lakefront</option>
                            <option value="A-frames" <%= listing.category === "A-frames" ? "selected" : "" %>>A-frames</option>
                            <option value="Camping" <%= listing.category === "Camping" ? "selected" : "" %>>Camping</option>
                        </select>
                        <label for="category">Category</label>
                        <div class="invalid-feedback">Please select a category.</div>
                    </div>
                </div>
                
            </div>
            
            <!-- Location + Country -->
            <div class="row">
                <div class="col-md-6">
                    <div class="form-floating mb-3">
                        <input type="text" name="listing[location]" id="location" class="form-control" value="<%= listing.location %>" placeholder="Enter Location" required>
                        <label for="location">Location</label>
                        <div class="invalid-feedback">
                            Please specify the location of the listing.
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-floating mb-3">
                        <input type="text" id="country" class="form-control" name="listing[country]" value="<%= listing.country %>" placeholder="Enter Country name" required>
                        <label for="country">Country</label>
                        <div class="invalid-feedback">
                            Country name is required.
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- Submit -->
            <button class="btn btn-dark edit-btn mt-3">Save Changes</button>
        </form>
    </div>
</div>